#include <iostream>

using namespace std;
int main() 
{
    int number;
    double decimal;
    char letter;
    char subject[21];
    	
 cout <<"Enter an integer"<< endl;
 cin >> number;
 cout <<"Enter a decimal number"<< endl;
 cin >> decimal;
 cout <<"Enter a single character"<< endl;
 cin >> letter;
 cout <<"Enter an array of characters"<< endl;
 cin >> subject;
 
 return 0;
}
 
