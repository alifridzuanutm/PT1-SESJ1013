#include <iostream>

using namespace std;

int main()
{
    int a = 1;
    double d = 1.0;

     a = 46/9;
     cout << "The Value of 'a' is  = " << a << endl;   //First part//
     
     a = 46 % 9 + 4 * 4 - 2;
     cout << "The Value of 'a' is  = " << a << endl;    //second part//
     
     a = 45 + 43 % 5 * (23 * 3 % 2);
     cout << "The Value of 'a' is  = " << a << endl;    //third part//
      
     a %=3 / a + 3;
     cout << "The Value of 'a' is = " << a << endl;    //fourth part//
     
     d += 1.5 * 3 + (++a);
     cout << "The Value of 'd' is = " << d << endl;    //fifth part//
     
     d -= 1.5 * 3 + a++;
     cout << "The Value of 'd' is = " << d << endl;    //sixth part//
     



    return 0;
}
