#include <iostream>

using namespace std;

int main()
{
double number;


cout << "Enter an integer number:" << endl;
cin >> number;

int sum = 0;
int n=number;
do {
 sum += n % 10;
 n /= 10;
} while (n != 0)

cout << "Sum of digits " << sum << endl;

if (sum %3 == 0){
cout << "Sum " << sum << " is multiple of 3. " << endl;
}
if (sum %4 == 0){
cout << "Sum " << sum << " is multiple of 4." << endl;
}
if (sum %5 ==0){
 cout << "Sum " << sum << " is multiple of 5." << endl;
}

cout << "Thank you" << endl;



return 0;
}





